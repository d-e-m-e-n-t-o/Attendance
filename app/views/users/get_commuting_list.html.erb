<% provide(:title, "commuting_list") %>
  <div>
    <h1>出勤中社員一覧</h1>
    <table class="table table-condensed table-striped table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>社員番号</th>
          <th>名前</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.employee_number %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>