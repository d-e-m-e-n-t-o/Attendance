<% provide(:title, @user.name) %>
<% provide(:class_text, 'apply-attendance') %>
<% provide(:button_text, '申請') %>
<div class="container">
  <div class="row">
    <table class="table table-bordered table-condensed user-table">
      <tr>
        <td>
          <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary btn-sm" %>
          【<%= l(@first_day, format: :middle) %>】時間管理表
          <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-primary btn-sm" %>
        </td>
        <td>指定勤務開始時間<%= format_basic_info(@user.designated_work_start_time) %><br>
            指定勤務終了時間<%= format_basic_info(@user.designated_work_end_time) %></br>
        </td>
        <td colspan="3">基本時間<%= format_basic_info(@user.basic_time) %></td>
        <td>月初日：<%= l(@first_day, format: :short) %></td>
      </tr>
    
      <tr>
        <td>所属：<%= @user.affiliation.present? ? @useraffiliationt : "未所属" %></td>
        <td>名前：<%= @user.name %></td>
        <td>コード</td>
        <td>?????</td>
        <td>出勤日数：<%= @worked_sum %>日</td>
        <td>月末日：<%= l(@last_day, format: :short) %></td>
      </tr>
    </table>
  </div>
</div>

<% if @user.superior == true %>
  <div class="various-notices">
    <%= link_to "【所属長承認申請のお知らせ】", edit_user_monthapply_path(@user, @applying_month, date: @first_day), remote: true,
    class: "#{@applying_month_count == 0 ? "link-not-applying" : "link-applying"}" %>
    <% if @applying_month_count !=0 %>
      <a class="Information-display"><%= "申請中の勤怠が#{@applying_month_count}件あります。" %></a>
    <% end %>
  </div>
    
  <div class="various-notices"><%= link_to "【勤怠変更申請のお知らせ】", "#", style: "color: black;" %></div>
  <div class="various-notices"><%= link_to "【残業申請のお知らせ】", "#", style: "color: black;" %></div>
<% end %>

<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %> <!--has_keyをdateで@first_dayを指定。controllerではparams[:date]、で受け取り可。-->
  <%= link_to "CSV出力", "#", class: "btn btn-primary" %><br>
  <%= link_to "勤怠修正ログ (承認済)", "#", class: "btn btn-primary" %></br>
</div>

<div class="container">
  <div class="row">
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th rowspan="3">残業申請</th>
          <th rowspan="3">日付</th>
          <th rowspan="3">曜日</th>
          <th colspan="8">【実績】</th>
          <th colspan="5">所定外勤務</th>
        </tr>
        
        <tr>
          <th colspan="3">出社</th>
          <th colspan="3">退社</th>
          <th rowspan="2">在社時間</th>
          <th rowspan="2">備考</th>
          <th colspan="2">終了予定時間</th>
          <th rowspan="2">時間外時間</th>
          <th rowspan="2">業務処理内容</th>
          <th rowspan="2">指示書確認㊞</th>
        </tr>
      
        <tr>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
        </tr>
      </thead>
    
      <tbody>
        <% @attendances.each do |day| %>
          <tr>
            <td><%= link_to "残業申請", overtime_apply_user_attendance_path(@user, day), remote: true, class: "btn btn-primary" %></td>
            <td><%= l(day.worked_on, format: :short) %></td>
            <td class='<%= "wday#{day.worked_on.wday}"%>'>
              <%= $days_of_the_week[day.worked_on.wday] %>
            </td>
            <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
            <td><%= l(day.started_at, format: :min) if day.started_at.present? %></td>
            <td>
              <% if day.started_at.nil? && btn_text = attendance_state(day) %>
                <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
              <% end %>
            </td>
            <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
            <td><%= l(day.finished_at, format: :min) if day.finished_at.present? %></td>
            <td>
              <% if day.started_at.present? && btn_text = attendance_state(day) %>
                <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
              <% end %>
            </td>
            <td>
              <% if day.started_at.present? && day.finished_at.present? %>
                <%= str_times = working_times(day.started_at, day.finished_at) %>
                <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <% end %>
            </td>
            <td><%= day.note %></td>
            <td><%= l(day.scheduled_end_time, format: :hour) if day.scheduled_end_time.present? %></td>
            <td><%= l(day.scheduled_end_time, format: :min) if day.scheduled_end_time.present? %></td>
            <td>
              <% if day.scheduled_end_time.present? &&day.finished_at.present? %>
              <%= over_time = over_times(day.scheduled_end_time, day.finished_at, day.check_overtime_apply) %>
                <% @total_working_times = @total_working_times.to_f + over_time.to_f %>
              <% end %>
            </td>
            <td><%= day.business_content %></td>
            <td><%= day.directions %></td>
          </tr>
        <% end %>
      </tbody>
      
      <tfoot>
        <tr>
          <td colspan="12" rowspan="3"></td>
          <td>累計日数</td>
          <td>総合勤務時間</td>
          <td>累計在社時間</td>
          <td rowspan="3"> <!-- 勤怠申請フォーム -->
            <%= form_with(model: @user, url: user_monthapply_path(@user, @applying_month, date: @first_day), local: true, method: :patch) do |f| %>
              <% if @applying_month.month_request_status == "なし" %>
                <label class="approval-label">所属長承認　未</label>
              <% elsif @applying_month.month_request_status == "申請中" %>
                <label class="approval-label"><%= "#{@applying_superior.name}に申請中です。" %></label>
              <% elsif @applying_month.month_request_status == "否認" %>
                <label class="approval-label"><%= "#{@applying_superior.name}に否認されました。" %></label>
              <% elsif @applying_month.month_request_status == "承認" %>
                <label class="approval-label"><%= "#{@applying_superior.name}から承認されました。" %></label>
              <% end %>
              
              <div class="center">
                <div class= "col-md-12">
                  <div class="apply-form">
                    <%= f.fields_for :monthapplies, @applying_month do |apply_month|%>
                      <%= apply_month.hidden_field :month_first_day, :value => @first_day %>
                      <%= apply_month.hidden_field :month_request_status, :value => "申請中" %>
                      <%= apply_month.hidden_field :month_check_confirm, :value => 0 %>
                      <%= apply_month.collection_select(:month_request_superior, @superiors, :id, :name, {include_blank: "選択して下さい", selected: "選択して下さい"}, {class: 'form-control'}) %>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <div class="center">
                <div class= "col-md-12">
                  <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)} col-md-12" %>
                </div>
              </div>
            <% end %>
            <div class="center">
              <div class= "col-md-12">
                <% if @applying_month.month_request_status == "申請中" %>
                  <%= link_to "申請取消", user_monthapply_path(@user, @applying_month, date: @first_day), method: :delete, data: { confirm: "#{ @applying_month.month_first_day.month}月分の申請を取り消してよろしいですか？" }, class: "btn btn-primary btn-#{yield(:class_text)} col-md-12" %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
        
        <tr>
          <td rowspan="3"><%= @attendances.count %></td>
          <td rowspan="3"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td> <!-- to_fは文字列を浮動小数点数に変換 -->
          <td rowspan="3"><%= format("%.2f", @total_working_times.to_f) %></td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>

<!-- 残業申請モーダルウインドウ表示 -->
<div id="overtime_apply" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<!-- 勤怠承認モーダル表示(一ヶ月分) -->
<div id="edit" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>